---
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
  <main class="my-10">
    <h1 class="text-center font-bold text-4xl">Colabora con un causa</h1>
    <p class="text-center mb-5">¡Únete a nosotros y haz la diferencia!</p>

    <div class="flex justify-center self-center z-10">
      <div class="p-12 bg-white mx-auto rounded-2xl w-100">
        <form class="space-y-5">
          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-700 tracking-wide"
              >Problema que se esta presentado</label
            >
            <input
              class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue"
              type="text"
              name="problem"
              placeholder="Describe tu problema"
            />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-700 tracking-wide"
              >Describe la situación actual</label
            >
            <input
              class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue"
              type="text"
              name="situation"
              placeholder="Describe tu situación actual"
            />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-700 tracking-wide"
              >Imagen de la situación</label
            >
            <input
              class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue"
              type="file"
              name="image"
              placeholder="URL de la imagen"
            />
          </div>
          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-700 tracking-wide"
              >Ubicación</label
            >
            <input
              class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue"
              type="text"
              name="location"
              placeholder="kr 1234 # 45-67"
            />
          </div>
          <div>
            <button
              type="submit"
              id="btn-submit-report"
              class="disabled:bg-gray-300 w-full flex justify-center bg-blue hover:bg-navy text-gray-100 p-3 rounded-full tracking-wide font-semibold shadow-lg cursor-pointer transition ease-in duration-500"
            >
              Reportar Problema
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</MainLayout>
