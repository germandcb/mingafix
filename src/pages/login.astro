---
import AuthLayout from "@/layouts/AuthLayout.astro";

const email = Astro.cookies.get("email")?.value ?? "";
const rememberMe = !!email;
---

<AuthLayout>
  <main class="mt-10">
    <div class="flex justify-center self-center z-10">
      <div class="p-12 bg-white mx-auto rounded-2xl w-100">
        <div class="mb-4">
          <h3 class="font-semibold text-2xl text-gray-800">
            Iniciar Sesión<nav></nav>
          </h3>
          <p class="text-gray-500">Inicia sesión con tu cuenta.</p>
        </div>
        <form class="space-y-5">
          <div class="space-y-2">
            <label class="text-sm font-medium text-gray-700 tracking-wide"
              >Email</label
            >
            <input
              class="w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
              type="email"
              name="email"
              value={email}
              placeholder="mail@gmail.com"
            />
          </div>
          <div class="space-y-2">
            <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
              Password
            </label>
            <input
              class="w-full content-center text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400"
              type="password"
              name="password"
              placeholder="*********"
            />
          </div>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input
                id="remember_me"
                name="remember_me"
                checked={rememberMe}
                type="checkbox"
                class="h-4 w-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded"
              />
              <label for="remember_me" class="ml-2 block text-sm text-gray-800">
                Recuerdame
              </label>
            </div>
            <div class="text-sm">
              <a href="/registre" class="text-green-400 hover:text-green-500">
                ¿No tienes cuenta?
              </a>
            </div>
          </div>
          <div>
            <button
              type="submit"
              id="btn-submit"
              class="disabled:bg-gray-300 w-full flex justify-center bg-green-400 hover:bg-green-500 text-gray-100 p-3 rounded-full tracking-wide font-semibold shadow-lg cursor-pointer transition ease-in duration-500"
            >
              Iniciar sesión
            </button>

            <div class="my-2 border-1 border-gray-600 " />

            <button
              type="button"
              id="btn-google"
              class="disabled:bg-gray-300 w-full flex justify-center bg-red-400 hover:bg-red-500 text-gray-100 p-3 rounded-full tracking-wide font-semibold shadow-lg cursor-pointer transition ease-in duration-500"
            >
              Iniciar sesión con Google
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</AuthLayout>

<script>
  import { firebase } from "@/firebase/config";
import { actions } from "astro:actions";
  import { GoogleAuthProvider, signInWithPopup } from "firebase/auth";
  import Swal from "sweetalert2";

  const form = document.querySelector("form") as HTMLFormElement;
  const btnSubmit = document.querySelector("#btn-submit") as HTMLButtonElement;

  const btnSubmitGoogle = document.querySelector("#btn-google") as HTMLButtonElement;

  btnSubmitGoogle.addEventListener("click", async (e) => {
    
    btnSubmitGoogle.setAttribute("disabled", "disable");
    const provider = new GoogleAuthProvider();

    try { 
      const credentials = await signInWithPopup( firebase.auth, provider);

      const { error } = await actions.loginWithGoogle(credentials);

      if ( error ) { 
        Swal.fire({
          icon: 'error',
          title: 'Error al iniciar sesión con Google',
          text: 'Por favor intenta nuevamente',
        })
        console.log(error)
        btnSubmitGoogle.removeAttribute("disabled");
        return;
      }

      btnSubmitGoogle.innerText = "Redireccionando...";
      window.location.replace("/dashboard");
      
    } catch (error) { 
      console.log(error)
      btnSubmitGoogle.removeAttribute("disabled");
    }
  })

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    btnSubmit.setAttribute("disabled", "disable");

    const formData = new FormData(form);

    const { error } = await actions.loginUser(formData);

    if (error) {
      Swal.fire({
        icon: 'error',
        title: 'Credenciales incorrectas',
        text: 'Por favor verifica tu email y contraseña',
      })
      btnSubmit.removeAttribute("disabled");
      return;
    }

    window.location.replace("/dashboard");
  });

  
</script>
