---
import Layout from '@/layouts/Layout.astro';
import '../styles/global.css';
import { Button } from '@/components/ui/button';

import { SignIn, SignOut } from 'auth-astro/components'
import { getSession } from 'auth-astro/server'

const session = await getSession(Astro.request);

if (session) {
	return Astro.redirect('/dashboard');
}
---
<Layout> 
	<main class="container">
		<section class="text-center my-32">
			<h1 class="text-8xl font-nunito font-extrabold">
				<span class="text-navy">Minga</span><span class="text-gold">Fix</span>
			</h1>
			<p class="mx-auto max-w-5xl mt-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde voluptatum iure quas officiis! Consequatur, assumenda laudantium cumque, voluptas, iure animi esse alias nesciunt vitae porro dolor distinctio ratione dolores incidunt.</p>
			<SignIn provider="google">
				<span class='font-nunito block bg-navy px-6 py-2 text-white cursor-pointer hover:bg-navy/90 transition-all rounded-full mt-8 text-xl'>
					Iniciar sesi√≥n con Google
				<span/>
			</SignIn>
		</section>

		<section class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center justify-items-center my-32">
			<div>
				<img class="w-fit aspect-auto rounded-md" src="/dashboard.jpg" loading="lazy" alt="Imagen Dashboard de la web">
			</div>
			<div>
				<h2 class="text-5xl font-nunito font-bold text-navy">Proposito de la web</h2>
				<p class="mt-5">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Accusantium consectetur voluptatem soluta dignissimos, beatae recusandae nulla quas ipsum aliquid! Eum, accusamus repellendus sit ipsa dicta aspernatur in officia odit magnam.</p>
			</div>
		</section>
	</main>
</Layout>